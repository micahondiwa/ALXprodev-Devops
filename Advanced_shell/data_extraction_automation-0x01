#!/bin/bash

# Extract and format values from data.json
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize
formatted_height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}') # decimetres -> metres
formatted_weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1 / 10}') # hectograms -> kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize

# Print in the exact format expected
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
