#!/bin/bash

# API endpoint for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request and save response
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Read the HTTP status code
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt  # Clean up temp file

# Check if request was successful
if [ "$STATUS_CODE" -ne 200 ]; then
    echo "$(date) - Failed to fetch data for Pikachu. Status code: $STATUS_CODE" >> "$ERROR_FILE"
    exit 1
fi

echo "Data for Pikachu saved to $OUTPUT_FILE"
