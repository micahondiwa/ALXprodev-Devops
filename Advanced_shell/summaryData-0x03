#!/bin/bash

# Input and output paths
input_dir="pokemon_data"
output_csv="pokemon_report.csv"

# Check if directory exists
if [ ! -d "$input_dir" ]; then
    echo "Directory $input_dir not found. Run Task 2 first."
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$output_csv"

# Loop through JSON files and extract data
for file in "$input_dir"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1 / 10}')  # dm → m
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1 / 10}')  # hg → kg
    
    echo "$name,$height,$weight" >> "$output_csv"
done

# Display file path
echo "CSV Report generated at: $output_csv"
echo ""
cat "$output_csv"
echo ""

# Calculate averages with awk
awk -F',' 'NR>1 {total_height+=$2; total_weight+=$3; count++}
    END {
        if (count>0) {
            printf "\nAverage Height: %.2f m\n", total_height/count;
            printf "Average Weight: %.2f kg\n", total_weight/count;
        }
    }' "$output_csv"
