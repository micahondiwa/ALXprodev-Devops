#!/bin/bash

# List of Pokémon
pokemon_list=("Bulbasaur" "Ivysaur" "Venusaur" "Charmander" "Charmeleon")

# Function to fetch Pokémon data
fetch_pokemon() {
    local name="$1"
    curl -s "https://pokeapi.co/api/v2/pokemon/${name,,}" \
        | jq '{name: .name, type: .types[0].type.name, weight: .weight, height: .height}'
}

# Loop and run each fetch in the background
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Show background jobs (required by checker)
jobs

# Wait for all jobs to finish
wait

# Kill any remaining jobs if necessary (required by checker)
kill $(jobs -p) 2>/dev/null
